@model IEnumerable<WebApplication2.Models.Person>

@{
    ViewData["Title"] = "List of People";
}

<h2>Person List</h2>


<div class="col-sm-10">
    @if (Model.Count() == 0)
    {
        <h3>No person available</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Birth Date
                    </th>
                    <th>
                        Age
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelPerson => person.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPerson => person.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPerson => person.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelPerson => person.Age)
                        </td>
                        @*<td>
                            @Html.ActionLink("Details", "ViewPerson", person)
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
<div>
    <a asp-action="EnterPerson" class="btn btn-info" id="rounded-button">Add a Person</a>
</div>